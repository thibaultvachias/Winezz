<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_main"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/item_background"
	android:clickable="true" >
			
	<RelativeLayout android:id="@+id/relative_layout_offers_item"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:minHeight="65sp"
		android:orientation="horizontal" >
		
	    <LinearLayout android:id="@+id/linear_layout_offers_item_left"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:orientation="horizontal" >
			
			<ImageView android:id="@+id/domaine_icon"
			    android:layout_width="50sp"
				android:layout_height="50sp"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="5sp"
				android:src="@drawable/icon_default" >
			</ImageView>
			
			<LinearLayout android:id="@+id/produitLayoutV"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="20sp"
				android:layout_gravity="center_vertical"
				android:orientation="vertical" >
				
				<TextView android:id="@+id/domaine_title"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:layout_marginLeft="10sp"
					android:text="Nom du Domaine" 
					android:textSize="18sp"
					android:textColor="#000"
					android:textStyle="bold" >
				</TextView>
				
				<TextView android:id="@+id/domaine_subtitle"
					android:text="Mr Dupond" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:layout_marginTop="5sp"
					android:layout_marginLeft="10sp"
					android:textSize="14sp"
					android:textColor="#000" >
				</TextView>
				    
			</LinearLayout>
			
		</LinearLayout>
	
		<LinearLayout android:id="@+id/relative_layout_offers_item_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:orientation="horizontal" >
			
			<LinearLayout
			    android:id="@+id/RL_vertical_img"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:gravity="center_vertical"
			    android:layout_marginRight="10sp"
			    android:orientation="vertical" >
				
			    <ImageView android:id="@+id/favorite_img"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content" >
				</ImageView>
			
			    <ImageView android:id="@+id/clock_img"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10sp" >
				</ImageView>
					
			</LinearLayout>
		
			<LinearLayout android:id="@+id/RL_vertical_img"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginRight="10sp"
				android:gravity="center_vertical"
				android:orientation="vertical" >
			    
				<ImageView android:id="@+id/arrowImg"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:src="@drawable/icon_arrow" >
		
				</ImageView>
				
			</LinearLayout>
		
		</LinearLayout>
		
	</RelativeLayout>

</LinearLayout>